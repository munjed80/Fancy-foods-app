{
  "name": "fancyfoods-app",
  "version": "1.0.0",
  "description": "FancyFoods Manager - Desktop app for managing wholesale nuts and seeds business",
  "main": "main.js",
  "author": "Fancy Foods",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-builder install-app-deps",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "better-sqlite3": "^9.6.0",
    "bootstrap": "^5.3.2",
    "extract-zip": "^2.0.1",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.fancyfoods.manager",
    "productName": "FancyFoods Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "database/**/*",
      "attachments/**/*",
      "emails/**/*",
      "backup/**/*",
      "!node_modules/.cache/**"
    ],
    "asarUnpack": [
      "node_modules/better-sqlite3/**/*.node"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
